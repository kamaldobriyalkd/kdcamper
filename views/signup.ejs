<%- include ("partials/headers")%>
<div class="container">
    <div class="well">
        <h1 class="heading">Sign Up!</h1>
        <div class="signup">
            <form action="/signup" method="POST" autocomplete="off">
                <div class="form-group">
                    <i class="fas fa-user"></i>
                    <input class="form-control" type="text" name="username" placeholder="username" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-key"></i>
                    <input class="form-control" type="password" name="password" pattern=".{6,12}"  title="password length must be between 6-12 " placeholder="password" required>
                </div>
                <div class="form-group">
                    <i class="fas fa-eye"></i>
                    <input class="form-control" type="text" name="cpassword" placeholder="confirm password" required>
                </div>
                <div class="form-group">
                    <button  class="btn btn-success btn-block">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>
