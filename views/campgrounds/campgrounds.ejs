<%- include ("../partials/headers")%>
 <div class="jumbotron">
     <div class="container">
   <h1 class="display-4 mb-3"><i class="fas fa-campground"></i> Welcome to KD Camper!</h1>
    <p class="lead">
      Hello, you can view all the hand-picked campgrounds from all over India in KD Camper website.
    </p>
    <hr class="my-4" />
    <p class="lead">
      <a
        class="btn btn-primary btn-lg"
        href="/campgrounds/addcamp"
        ><svg class="bi bi-plus-square" width="1.2em" height="1.2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M8 3.5a.5.5 0 01.5.5v4a.5.5 0 01-.5.5H4a.5.5 0 010-1h3.5V4a.5.5 0 01.5-.5z" clip-rule="evenodd"/>
          <path fill-rule="evenodd" d="M7.5 8a.5.5 0 01.5-.5h4a.5.5 0 010 1H8.5V12a.5.5 0 01-1 0V8z" clip-rule="evenodd"/>
          <path fill-rule="evenodd" d="M14 1H2a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V2a1 1 0 00-1-1zM2 0a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V2a2 2 0 00-2-2H2z" clip-rule="evenodd"/>
        </svg> Add New</a>
    </p>
    </div>
  </div>

     <div class="container">
  <div class="row text-center camp">
    <% campGrounds.forEach(function(camp){%>
    <div class="col-lg-4 col-sm-12 mb-5 mt-5">
<div class="img-thumbnail" >
    <img src="<%=camp.image%>" class="img-responsive campground" />
      <h3 class="mb-n1"><%=camp.name%></h3>
      <h4 class="place mb-3">(<%=camp.place%>)</h4>
      <a href="/campgrounds/<%=camp._id%>"><button type="button" class="btn btn-outline-info">See Full Post <svg class="bi bi-chevron-double-right" width="1.2em" height="1.2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M3.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L9.293 8 3.646 2.354a.5.5 0 010-.708z" clip-rule="evenodd"/>
        <path fill-rule="evenodd" d="M7.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L13.293 8 7.646 2.354a.5.5 0 010-.708z" clip-rule="evenodd"/>
      </svg></button></a>
    </div>
</div>
    <%});%>
  </div>
</div>
